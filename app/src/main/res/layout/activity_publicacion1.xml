<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="137dp"
        android:layout_height="101dp"
        android:src="@drawable/fup_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="235dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:text="Llena todos los datos. Cada detalle es sumamente necesario"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout

        android:id="@+id/linearLayout2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.033"
        android:layout_width="340dp"
        android:layout_height="544dp"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:text="Escribe título para la publicación"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/txttitulo"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/colorPrimary"
            android:hint="Diseñadora"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:text="Haz una descripción de tu trabajo"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/txtdescripcion"
            android:layout_width="326dp"
            android:layout_height="66dp"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:hint="El trabajo consiste en ...."
            android:imeOptions="actionGo"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimary" />



        <Button
            android:id="@+id/btnpublicarTra"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_basic"
            android:text="Siguiente"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>